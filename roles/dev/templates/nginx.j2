# {{ ansible_managed }}

upstream dev {
    server {{ dev_ip }}:{{ dev_port }} fail_timeout=0;
}

{% for domain in dev_ssl_domains %}
server {
  listen [::]:80;
  listen 80;

  server_name {{ domain }};
  rewrite ^ https://$server_name$request_uri? permanent;

  include snippets/le.conf;
}
{% endfor %}

{% for domain in dev_ssl_domains %}
server {
  listen 443 ssl http2;
  listen [::]:443 ssl http2;
  ssl on;

  ssl_certificate {{ le_root }}{{ dev_domain }}/fullchain.pem;
  ssl_certificate_key {{ le_root }}{{ dev_domain }}/privkey.pem;

  server_name {{ domain }};

  root /usr/share/www;
  index index.html index.htm;

  add_header Strict-Transport-Security max-age=31536000;

  error_log   /var/log/nginx/{{ domain }}-error.log;
  access_log  /var/log/nginx/{{ domain }}-access.log;

  include snippets/logspass.conf;

  location / {
    try_files $uri @dev;
  }

  location @dev {
    proxy_set_header        Host $host;
    proxy_set_header        X-Real-IP $remote_addr;
    proxy_set_header        X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header        X-Forwarded-Proto https;
    proxy_redirect          http:// https://;

    proxy_next_upstream error timeout invalid_header http_500 http_502 http_503 http_504;

    proxy_connect_timeout      90;
    proxy_send_timeout         90;
    proxy_read_timeout         90;

    proxy_buffer_size          4k;
    proxy_buffers              4 32k;
    proxy_busy_buffers_size    64k;
    proxy_temp_file_write_size 64k;
    proxy_max_temp_file_size 0;

    client_max_body_size    10m;
    client_body_buffer_size 128k;

    if (!-f $request_filename) {
      proxy_pass http://dev;
      break;
    }
  }

  include snippets/le.conf;
}
{% endfor %}
